                <hr/>
            }
            
        </div>
    </div>

    <div class="col-md-7">
        <ul class="list-group">
            @foreach (WenKu wenku in ((List<WenKu>)ViewBag.WenKus))
            {
                <li class="list-group-item"><a href="/Upload/WenKu/@wenku.FileName">@wenku.Name</a></li>
            }
         
        </ul>

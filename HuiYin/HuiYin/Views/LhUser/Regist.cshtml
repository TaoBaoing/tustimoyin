@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注册</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-1">汇印</div>
            <div class="col-md-9"> </div>
            <div class="col-md-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a target=blank href=http://wpa.qq.com/msgrd?V=3&uin=1079807124&Site=汇印&Menu=yes><img border="0" src=http://wpa.qq.com/pa?p=1:1079807124:1 alt="点击这里给我发消息"></a></li>
                </ul>
            </div>
            <div class="col-md-1">
                <input id="Button1" type="button" class="btn btn-primary" value="下载汇印APP" />
            </div>
        </div>

        @using (Html.BeginForm("Regist", "LhUser", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="row" style="margin-top: 50px;text-align: center">

                <div class="col-md-12" style="text-align: center">
                    <div style="margin-top: 50px;">极速注册，只要一步</div>

                </div>
                <br />

                <div class="col-md-12">
                    手机号码
                    <span style="margin: 20px 0">
                        <input id="txtName" maxlength="11" style="width: 100%" required="required" name="txtName" placeholder="手机号码" type="number" />
                    </span>

                </div>
                <br />
                <div class="col-md-12">
                    输入密码
                    <span style="margin: 20px 0">
                        <input id="txtPwd" maxlength="11" style="width: 100%" required="required" name="txtPwd" placeholder="密码" type="password" />
                    </span>
                </div>
                <br/>
                <script type="text/javascript">
                    function pblur() {
                        var p1 = $("#txtPwd").val();
                        var p2 = $("#txtPwd2").val();
                        if (p1 !== p2) {
                            alert('密码不一致');
                            $("#txtPwd").val("");
                            $("#txtPwd2").val("");
                        }
                    }
                </script>
                <div class="col-md-12">
                    确认密码
                    <span style="margin: 20px 0">
                        <input id="txtPwd2" maxlength="11" style="width: 100%" required="required" name="txtPwd2" placeholder="密码" type="password" onblur="pblur()" />
                    </span>
                </div>
                <br/>

                <div class="col-md-12">
                    <div style="margin: 20px 0">
                        <input id="btnLogin" style="width: 100%" type="submit" value="极速注册" class="btn btn-primary" />
                    </div>
                </div>

            </div>
        }

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
